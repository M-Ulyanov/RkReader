{
    "name": "RkReader",
    "description": "RkReader",
    "version": "1.0.0",
    "permissions": [
        "storage",
        "unlimitedStorage",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts":["background/config.js", "background/loadingRemoteData.js", "background/initApp.js"]
    },
    "icons": {
        "16": "build/icons/16.png",
        "32": "build/icons/32.png",
        "48": "build/icons/48.png",
        "64": "build/icons/64.png",
        "128": "build/icons/128.png"
    },
    "browser_action": {
        "default_icon": "build/icons/20.png",
        "default_title": "RkReader",
        "default_popup": "app.html"
    },
    "manifest_version": 2
}
